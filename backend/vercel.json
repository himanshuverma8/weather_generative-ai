{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/health", "destination": "/api/health.js" },
    { "source": "/api/weather", "destination": "/api/weather.js" },
    { "source": "/api/chat", "destination": "/api/chat.js" }
  ]
}

